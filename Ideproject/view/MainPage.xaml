<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="notePad.MainPage"
             BackgroundColor="#23272E"
             Title="Dark Notepad">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="10">
        <Label Text="Select Language:" 
               TextColor="#A9B7C6"
               FontSize="16"/>
        <Picker
            ItemsSource="{Binding Languages}"
            ItemDisplayBinding="{Binding Name}"
            SelectedItem="{Binding SelectedLanguage, Mode=TwoWay}"
            SelectedIndexChanged="OnLanguageChanged" />
        <Label x:Name="LanguageLabel"
               Text="Language: Unknown"
               TextColor="#A9B7C6"
               FontSize="18"
               HorizontalOptions="Start"/>
        <Editor x:Name="CodeEditor"
                AutoSize="TextChanges"
                TextColor="#A9B7C6"
                BackgroundColor="#2B2B2B"
                FontSize="16"
                HeightRequest="400"
                TextChanged="CodeEditor_TextChanged"/>
        <Button Text="Run Code"
                TextColor="#A9B7C6"
                BackgroundColor="#007cff"
                Clicked="OnRunCodeClicked"/>
        <Label x:Name="OutputLabel"
               Text="Output will appear here"
               TextColor="#A9B7C6"
               FontSize="16"
               LineBreakMode="WordWrap"
               HeightRequest="100"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
